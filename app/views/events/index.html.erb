<div class="container">
  <div class="jumbotron">
    <h1>AngularJS Tutorial</h1>
    <p>by Piotr Jaworski</p>
  </div>
  <div ng-controller="EventsCtrl">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="col-md-2">Name</th>
              <th class="col-md-2">Date</th>
              <th class="col-md-3">Place</th>
              <th class="col-md-3">Description</th>
              <th class="col-md-2">Actions</th>
            </tr>
          </thead>
          <tbody>
             <tr ng-repeat="event in events" ng-include="toggleForm(event)"></tr>
              <td>{{event.name}}</td>
              <td>{{event.event_date}}</td>
              <td>{{event.place}}</td>
              <td>{{event.description}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <input ng-change="filterEvents()" type="text" id="search" class="form-control" ng-model="search" placeholder="Type search phrase here..." />        
      </div>
      <div class="col-md-8">
        <form class="form-inline" ng-submit="addEvent()">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" ng-model="event.name" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="place" placeholder="Place" ng-model="event.place" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="event_date" placeholder="Event date" ng-model="event.event_date" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="description" placeholder="Description" ng-model="event.description" />
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  <script type="text/ng-template" id="form">
      <td>
        <input ng-model="editing.name" type="text" class="form-control" name="name" />
      </td>
      <td>
        <input ng-model="editing.event_date" type="text" class="form-control" name="event_date" />
      </td>
      <td>
        <input ng-model="editing.place" type="text" class="form-control" name="place" />
      </td>
      <td>
        <input ng-model="editing.description" type="text" class="form-control" name="description" />
      </td>
      <td>
        <button ng-click="hideForm()" class="btn btn-default btn-xs">Cancel</button>
        <button ng-click="updateEvent($index)" class="btn btn-success btn-xs">Save</button>
      </td>
    </script>
    <script type="text/ng-template" id="row">
      <td>
        <span>{{event.name}}</span>
      </td>
      <td>
        <span>{{event.event_date}}</span>
      </td>
      <td>
        <span>{{event.place}}</span>
      </td>
      <td>
        <span>{{event.description}}</span>
      </td>
      <td>
        <button ng-click="editEvent(event)" class="btn btn-primary btn-xs">Edit</button>
        <button ng-click="removeEvent(event)" class="btn btn-danger btn-xs">Remove</button>
      </td>
    </script>
  </div>
</div>